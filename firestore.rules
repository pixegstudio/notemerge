rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User data - sadece kendi verilerine eri≈üebilir
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // Premium status sadece okuyabilir, yazamaz (Cloud Functions yazacak)
      allow update: if request.auth != null 
        && request.auth.uid == userId
        && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['isPremium', 'productId', 'purchaseDate', 'premiumExpiresAt']);
      
      allow delete: if request.auth != null && request.auth.uid == userId;
      
      // Subcollections (courses, notes, settings)
      match /{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Global tags (read-only for all authenticated users)
    match /globalTags/{tagId} {
      allow read: if request.auth != null;
      allow write: if false; // Sadece admin
    }
  }
}
