{
  "expo": {
    "name": "NoteMerge",
    "slug": "notemerge",
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#2A2A3E"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
  "ios": {
    "supportsTablet": false,
    "bundleIdentifier": "com.notemerge.app",
    "buildNumber": "9",
      "infoPlist": {
        "NSCameraUsageDescription": "NoteMerge needs camera access to scan your notes and documents.",
        "NSPhotoLibraryUsageDescription": "NoteMerge needs photo library access to import images.",
        "NSPhotoLibraryAddUsageDescription": "NoteMerge needs permission to save PDFs to your photo library.",
        "UIViewControllerBasedStatusBarAppearance": true,
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#2A2A3E"
      },
      "package": "com.notemerge.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "NoteMerge needs access to your photos to import images.",
          "cameraPermission": "NoteMerge needs camera access to scan documents."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "4fe57b13-ca1c-43d6-9363-e7a305a962f4"
      }
    },
    "owner": "gurowe"
  }
}
